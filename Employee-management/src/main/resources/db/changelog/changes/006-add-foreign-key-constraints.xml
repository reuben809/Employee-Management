<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="add-fk-employee-manager" author="REUBEN.JOSEPH">
        <addForeignKeyConstraint baseTableName="employee"
                                 baseColumnNames="manager_id"
                                 constraintName="fk_employee_manager"
                                 referencedTableName="employee"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="add-fk-department-manager" author="Reuben.Joseph">
        <addForeignKeyConstraint baseTableName="department"
                                 baseColumnNames="manager_id"
                                 constraintName="fk_department_manager"
                                 referencedTableName="employee"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="add-fks-to-task" author="Reuben.Joseph">
        <addForeignKeyConstraint baseTableName="task"
                                 baseColumnNames="project_id"
                                 constraintName="fk_task_project"
                                 referencedTableName="project"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="task"
                                 baseColumnNames="assigned_to_id"
                                 constraintName="fk_task_employee"
                                 referencedTableName="employee"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="add-fks-to-employee-project" author="Reuben.Joseph">
        <addForeignKeyConstraint baseTableName="employee_project"
                                 baseColumnNames="employee_id"
                                 constraintName="fk_employee_project_employee"
                                 referencedTableName="employee"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="employee_project"
                                 baseColumnNames="project_id"
                                 constraintName="fk_employee_project_project"
                                 referencedTableName="project"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>